@page
@model IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Home page";
}
<form method="post" class="col-md-7 col-lg-8">
    <div class="row g-3">
        <div class="col-sm-6">
            <label for="firstName" class="form-label">First name</label>
            <input asp-for="SignUpForm.FirstName" class="form-control" id="firstName" required>
            <div class="invalid-feedback">
                Valid first name is required.
            </div>
        </div>
        <div class="col-sm-6">
            <label for="lastName" class="form-label">Last name</label>
            <input asp-for="SignUpForm.LastName" class="form-control" id="lastName" required>
            <div class="invalid-feedback">
                Valid last name is required.
            </div>
        </div>
        <div class="col-12">
            <label for="email" class="form-label">Email Address</label>
            <input asp-for="SignUpForm.EmailAddress" type="email" class="form-control" id="email" required>
            <div class="invalid-feedback">
                Valid email address is required.
            </div>
        </div>
        <div class="col-12">
            <button class="w-100 btn btn-primary btn-lg" type="submit">Sign Up</button>
        </div>
    </div>
</form>